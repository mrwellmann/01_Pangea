<h1>Public Wishlists</h1>

<p>
  <b>Wishlist name:</b>
  <%=h @public_wishlist.wishlist_name %>
</p>

<p>
  <b>User:</b>
  <%=h @public_wishlist.user.user_name %>
</p>

<table >
	  <tr>
    <th scope="col"><div align="left"><b>Product wishes:</b></th>
  </tr>
	<% unless @public_wishlist.products.empty?%>
		<% for product in @public_wishlist.products %>
			  <tr>
    			<td><%= link_to product.product_name, product %></td>
					<td><%= image_tag product.image_url,:size => "100x100", :class => 'list-image' %></td>
			</div>
		<% end %>
	<% end %>
</table>
<%= link_to 'Back', public_wishlists_path %>