<% @foods.each do |food| %>
  <tr>
    <td><%=h food.food_name %></td>
    <td><%=h food.description %></td>
    <td><%=h food.image_url %></td>
    <td><%=h food.price %></td>
    <td><%=h food.expirience_points %></td>
	<%if food.continent!=nil%>
		<td><%=h food.continent.continent_name%></td>
	<%end%>
	<%if food.foodkind=nil%>
		<td><%=h food.foodkind.foodkind_name%></td>
	<%end%>
				
    <td><%=h food.menue_id %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
