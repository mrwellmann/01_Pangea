<h1>Listing foods</h1>

<table>
  <tr>
    <th>Food name</th>
    <th>Description</th>
    <th>Image url</th>
    <th>Price</th>
    <th>Expirience points</th>
    <th>Continent</th>
    <th>Foodkind</th>
    <th>Menue</th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%=h food.food_name %></td>
    <td><%=h food.description %></td>
    <td><%=h food.image_url %></td>
    <td><%=h food.price %></td>
    <td><%=h food.expirience_points %></td>
	<td>
	<%if food.continent_id!=nil%>
		<%=h food.continent.continent_name%>
	<%end%>
	</td>
	<td>
	<%if food.foodkind!=nil%>
		<%=h food.foodkind.foodkind_name%>
	<%end%>
	</td>			
    <td><%=h food.menue_id %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

