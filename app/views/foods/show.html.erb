<p>
  <b>Food name:</b>
  <%=h @food.food_name %>
</p>
<p>
	<%= image_tag @food.image_url, :size => "200x200", :class => 'list-image' %>
</p>
<p>
  <b>Description:</b>
  <%=h @food.description %>
</p>
<!--
<p>
  <b>Price:</b>
  <%=h @food.price %>
</p>
-->
<p>
  <b>Expirience points:</b>
  <%=h @food.expirience_points %>
</p>

<p>
	<%if @food.continent!=nil%>
  <b>From:</b>
  
  <%=h @food.continent.continent_name %>
  <% end %>
</p>

<p>
  <%if @food.foodkind!=nil%>
	  <b>Foodkind:</b>
	  <%=h @food.foodkind.foodkind_name %>
  <% end %>
</p>

<% if admin_signed_in? %> 
	<%= link_to 'Edit', edit_food_path(@food) %> |
<% end %>	
