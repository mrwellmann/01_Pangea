<% form_for(@food) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :food_name, "Title" %><br />
    <%= f.text_field :food_name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url %>
  </p>
  <p>
    <%= f.label :continent_id ,"From"%><br />
    <%= f.collection_select(:continent_id,@continent,:id,:continent_name,{:prompt => true})%>
  </p>
  <p>
    <%= f.label :foodkind_id %><br />
    <%= f.collection_select(:foodkind_id,@foodkind,:id,:foodkind_name,{:prompt => true}) %>
  </p>
  <p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :expirience_points, "Expirience Points"  %><br />
    <%= f.text_field :expirience_points %>
  </p>
    <%= f.submit button_name %>
  </p>
<% end %>
