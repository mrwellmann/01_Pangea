<p>
  <b>Ingredients:</b>
	<table>	
	  <%for food in menue.foods%>
			<tr>
				<td rowspan=4 align="center" valign="middle" width=' 25%'>
					<% link_to(food) do %>	
						<%= image_tag food.image_url, :size =>'100x100' %><br>	
						<%= food.food_name%>
					<% end %>
				</td>
			</tr>
		<% end %>
	</table>
</p>