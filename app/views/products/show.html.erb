
<p>
  <b>Title:</b>
  <%=h @product.product_name %>
</p>

<p>
	<%= image_tag @product.image_url, :size => "200x200", :class => 'list-image' %>
</p>

<p>
  <b>Description:</b>
  <%=@product.description %>
</p>

<p>
  <%if @product.continent!=nil%>
	  <b>From:</b>
	  <%=h @product.continent.continent_name %>
  <%end%>	
</p>
<!--			
<p>
  <b>Price:</b>
  <%=h @product.price %>
</p>
-->
<p>
  <b>Expirience Points:</b>
  <%=h @product.expirience_points %>
</p>
<p>
	<% if @wishlists != nil %>
		<b>Add to Wishlist:</b>
		
			<% form_for @product, :url => { :action => "add_to_wishlist" } do |f| %>	
		  	<%= f.error_messages %>
				<%= f.collection_select(:wishlist_ids, @wishlists, :id, :wishlist_name,{},
						{:multiple => true, :wishlist_name => ('product[:wishlist_ids][]')}) %>
		    <%= f.submit 'Add'  %> <%= link_to 'New List', new_wishlist_path %>
			<% end %>

		
	 <% end %>		
</p>
<% if admin_signed_in? %>
	<%= link_to 'Edit', edit_product_path(@product) %>
<% end %>
<%= link_to 'Back', :back %>