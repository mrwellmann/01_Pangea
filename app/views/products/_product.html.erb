<tr>
	<td rowspan=4 align="center" valign="middle" width=' 25%'>

			<% link_to(product) do %>
				<%=image_tag(product.image_url, :class => 'list-image')%><br>
				<%= product.product_name %>
			<% end %>
			
			<br>	
		<% if admin_signed_in? %>                                             
			<%= link_to 'Edit', edit_product_path(product) %><br>                            
			<%= link_to 'Delete', product, :confirm => 'Do you realy want to delete this shop item?', :method => :delete %>	
		<% end %>	
	</td>
</tr>
